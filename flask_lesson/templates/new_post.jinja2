{% extends "base.jinja2" %}

{% block content %}
    <h2>Create a new post</h2>
    <form action="/posts/add" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title">
        </div>
        <div>
            <label for="content">Content</label>
            <textarea name="content" cols="30" rows="10"></textarea>
        </div>
        <div>
            <input type="submit">
        </div>
    </form>
{% endblock %}